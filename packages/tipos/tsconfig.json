{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "target": "es2024",
    "module": "nodenext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "resolveJsonModule": true,
  "skipLibCheck": true,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/generated/"]
}
